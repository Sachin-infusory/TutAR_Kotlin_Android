<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Splash Theme -->
    <style name="SplashTheme" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:statusBarColor">@color/splash_background_start</item>
        <item name="android:navigationBarColor">@color/splash_background_end</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowFullscreen">false</item>
    </style>

    <!-- Custom font styles -->
    <style name="SplashTitleText">
        <item name="android:textSize">42sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:letterSpacing">0.05</item>
        <item name="android:shadowColor">@color/shadow_color</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">4</item>
        <item name="android:shadowRadius">8</item>
    </style>

    <style name="SplashSubtitleText">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/tagline_color</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:letterSpacing">0.08</item>
        <item name="android:alpha">0.9</item>
    </style>
</resources>