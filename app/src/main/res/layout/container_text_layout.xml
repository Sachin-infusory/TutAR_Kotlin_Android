<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipChildren="false"
    android:clipToPadding="false">

    <LinearLayout
        android:id="@+id/main_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:clipChildren="false"
        android:clipToPadding="false">

        <!-- Content Container with Header -->
        <LinearLayout
            android:id="@+id/content_wrapper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/dotted_border_background"
            android:padding="8dp"
            android:minWidth="300dp">

            <!-- Header with Title and Top Buttons -->
            <LinearLayout
                android:id="@+id/header_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="8dp">

                <!-- Title -->
                <TextView
                    android:id="@+id/text_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:gravity="start"
                    android:maxLines="2"
                    android:text="Topic"
                    android:textColor="@android:color/white"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <!-- Top Control Buttons -->
                <LinearLayout
                    android:id="@+id/top_controls_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:baselineAligned="false"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <!-- Undo Button -->
                    <ImageView
                        android:id="@+id/btn_undo"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_marginStart="4dp"
                        android:layout_marginEnd="4dp"
                        android:contentDescription="Undo"
                        android:padding="6dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/ic_undo_tool"
                        android:tint="@android:color/white" />

                    <!-- Redo Button -->
                    <ImageView
                        android:id="@+id/btn_redo"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_marginStart="4dp"
                        android:layout_marginEnd="4dp"
                        android:contentDescription="Redo"
                        android:padding="6dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/ic_redo_tool"
                        android:tint="@android:color/white" />

                    <!-- Edit Button -->
                    <ImageView
                        android:id="@+id/btn_edit"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_marginStart="4dp"
                        android:layout_marginEnd="4dp"
                        android:contentDescription="Edit"
                        android:padding="6dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/ic_write_tool"
                        android:tint="@android:color/white" />

                    <!-- Remove Button -->
                    <ImageView
                        android:id="@+id/btn_remove"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_marginStart="4dp"
                        android:contentDescription="Remove"
                        android:padding="6dp"
                        android:scaleType="centerInside"
                        android:src="@android:drawable/ic_menu_close_clear_cancel"
                        android:tint="@android:color/white" />

                </LinearLayout>

            </LinearLayout>

            <!-- Text Content Container - FLEXIBLE HEIGHT -->
            <FrameLayout
                android:id="@+id/content_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minWidth="280dp"
                android:minHeight="50dp">

                <!-- TextView (default view) - WRAP_CONTENT -->
                <TextView
                    android:id="@+id/text_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:layout_margin="8dp"
                    android:text="Sample Text Container\n\nClick edit to modify this text."
                    android:textSize="15sp"
                    android:textColor="@android:color/white"
                    android:gravity="start|top"
                    android:layout_gravity="start|top"
                    android:lineSpacingMultiplier="1.3"
                    android:visibility="visible" />

                <!-- EditText (edit mode) - WRAP_CONTENT -->
                <EditText
                    android:id="@+id/edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:layout_margin="8dp"
                    android:textSize="15sp"
                    android:textColor="@android:color/white"
                    android:textColorHint="#80FFFFFF"
                    android:gravity="start|top"
                    android:layout_gravity="start|top"
                    android:visibility="gone"
                    android:background="@android:color/transparent"
                    android:importantForAutofill="no"
                    android:inputType="textMultiLine|textCapSentences"
                    android:hint="Enter text here..."
                    android:scrollbars="vertical"
                    android:overScrollMode="always"
                    android:minLines="3"
                    android:maxLines="20" />

            </FrameLayout>

        </LinearLayout>

    </LinearLayout>

</FrameLayout>