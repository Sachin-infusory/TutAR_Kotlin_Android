<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/glass_background"
    android:orientation="vertical"
    android:clipChildren="true"
    android:clipToPadding="true">

    <!-- Header with purple gradient background matching the image -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/purple_header_background"
        android:elevation="4dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">

        <ImageButton
            android:id="@+id/btn_close"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@drawable/glass_background"
            android:contentDescription="Close"
            android:elevation="2dp"
            android:padding="10dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_close_white" />
    </RelativeLayout>

    <!-- Dropdowns Row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:orientation="horizontal"
        android:padding="10dp"
        android:weightSum="3">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <Spinner
                android:id="@+id/spinner_class"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/glass_spinner_background"
                android:elevation="2dp"
                android:hint="Miscel..."
                android:padding="12dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="4dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <Spinner
                android:id="@+id/spinner_subject"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/glass_spinner_background"
                android:elevation="2dp"
                android:hint="Science..."
                android:padding="12dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <Spinner
                android:id="@+id/spinner_option"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/glass_spinner_background"
                android:elevation="2dp"
                android:hint="Lesso..."
                android:padding="12dp" />
        </LinearLayout>
    </LinearLayout>

    <!-- Query Input Row -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <EditText
            android:id="@+id/et_query"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/glass_edittext_background"
            android:elevation="2dp"
            android:gravity="top|start"
            android:hint="Search for educational content..."
            android:inputType="textMultiLine|textCapSentences"
            android:maxLines="3"
            android:minLines="2"
            android:padding="12dp"
            android:paddingEnd="75dp"
            android:textColor="@android:color/white"
            android:textColorHint="#80FFFFFF"
            android:textSize="14sp" />

        <ImageButton
            android:id="@+id/btn_search"
            android:layout_width="35dp"
            android:layout_height="30dp"
            android:layout_alignEnd="@id/et_query"
            android:layout_alignBottom="@id/et_query"
            android:layout_marginEnd="6dp"
            android:layout_marginBottom="4dp"
            android:background="@drawable/search_icon_background"
            android:contentDescription="Search"
            android:elevation="6dp"
            android:padding="6dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_arrow_right"
            android:stateListAnimator="@null" />
    </RelativeLayout>

    <!-- Results Section -->
    <ScrollView
        android:id="@+id/scroll_results"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="none"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/ll_results_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Results will be populated programmatically -->
        </LinearLayout>
    </ScrollView>
</LinearLayout>