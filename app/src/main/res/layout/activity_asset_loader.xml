<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_background_gradient"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        tools:context=".ui.assets.AssetLoaderActivity">

        <!-- Background decoration -->
        <View
            android:id="@+id/background_decoration"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:alpha="0.1"
            android:background="@drawable/circle_decoration"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Logo -->
        <ImageView
            android:id="@+id/iv_logo"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="30dp"
            android:contentDescription="@string/app_logo"
            android:src="@drawable/tutar_logo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Title -->
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:letterSpacing="0.02"
            android:text="Load 3D Assets"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_logo" />

        <!-- Subtitle -->
        <TextView
            android:id="@+id/tv_subtitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginHorizontal="32dp"
            android:alpha="0.8"
            android:text="Pick your 3D models ZIP file for a complete 3D experience"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_title" />

        <!-- Asset Loader Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_asset_loader"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="24dp"
            app:cardBackgroundColor="@color/black"
            app:cardCornerRadius="16dp"
            app:cardElevation="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_subtitle">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Permission Status Section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_marginBottom="20dp">

                    <ImageView
                        android:id="@+id/iv_permission_icon"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_lock"
                        android:contentDescription="Permission Status" />

                    <TextView
                        android:id="@+id/tv_permission_status"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="12dp"
                        android:text="Storage Access Required"
                        android:textColor="@color/splash_primary"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <!-- Request Permission Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_request_permission"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginBottom="16dp"
                    android:letterSpacing="0.1"
                    android:text="GRANT STORAGE ACCESS"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:cornerRadius="24dp"
                    app:strokeColor="@color/splash_primary"
                    app:strokeWidth="2dp"
                    android:textColor="@color/splash_primary"
                    app:icon="@drawable/ic_lock"
                    app:iconTint="@color/splash_primary"
                    app:iconGravity="textStart" />

                <!-- Divider -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginVertical="8dp"
                    android:alpha="0.2"
                    android:background="@color/white" />

                <!-- Instructions -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="16dp"
                    android:alpha="0.7"
                    android:text="Select a ZIP file containing your 3D models to enhance your 3D learning experience."
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="12sp" />

                <!-- Pick File Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_pick_file"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginBottom="16dp"
                    android:letterSpacing="0.1"
                    android:text="PICK ZIP FILE"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:visibility="gone"
                    app:cornerRadius="24dp"
                    app:strokeColor="@color/splash_primary"
                    app:strokeWidth="2dp"
                    android:textColor="@color/splash_primary"
                    app:icon="@drawable/ic_folder"
                    app:iconTint="@color/splash_primary"
                    app:iconGravity="textStart" />

                <!-- Selected File Info -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_background"
                    android:backgroundTint="@color/splash_primary"
                    android:alpha="0.15"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="12dp"
                    android:layout_marginBottom="16dp"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/iv_checkmark"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/rounded_background"
                        android:contentDescription="File Selected"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/tv_selected_file"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        android:ellipsize="middle"
                        android:singleLine="true"
                        android:text="model_assets.zip"
                        android:textColor="@color/white"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        android:visibility="gone" />

                </LinearLayout>

                <!-- Load Assets Button Container -->
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <!-- Load Assets Button -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_load_assets"
                        style="@style/Widget.Material3.Button"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:alpha="0.6"
                        android:enabled="false"
                        android:letterSpacing="0.1"
                        android:text="LOAD ASSETS"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        app:backgroundTint="@color/splash_primary"
                        app:cornerRadius="24dp"
                        app:elevation="6dp"
                        app:iconGravity="textStart" />

                    <!-- Progress Bar -->
                    <ProgressBar
                        android:id="@+id/progress_bar"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:indeterminateTint="@color/white"
                        android:visibility="gone" />

                </FrameLayout>

                <!-- Loading Status Text -->
                <TextView
                    android:id="@+id/tv_loading_status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="Extracting and loading 3D models..."
                    android:textAlignment="center"
                    android:textColor="@color/splash_primary"
                    android:textSize="12sp"
                    android:textStyle="italic"
                    android:visibility="gone" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Skip Option -->
        <TextView
            android:id="@+id/tv_skip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="?android:attr/selectableItemBackground"
            android:padding="12dp"
            android:text="Skip for now"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:alpha="0.7"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/card_asset_loader" />

        <!-- Footer Text -->
        <TextView
            android:id="@+id/tv_footer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="20dp"
            android:alpha="0.7"
            android:text="TutAR © 1.0.0\nNext Reality ClassRoom"
            android:textAlignment="center"
            android:textColor="@color/tagline_color"
            android:textSize="10sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_skip" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>